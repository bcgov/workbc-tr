                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default cancel-form" data-dismiss="modal">Cancel</button>
                    <a href="#" id="submit-form" class="btn btn-success success">Submit</a>
                </div>
            </div>
        </div>
    </div>
    {# subscription form popup end #}
  </footer>
{% endif %}
